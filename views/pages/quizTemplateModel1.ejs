<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script> const data = <%- JSON.stringify(quizList) %>; </script>

<!-- le boutton start -->
<div><button class="start_btn" >Êtes-vous prêt ?</button></div>

    <!-- info box-->
    <div class="info_box">
    <div class="info-title"><span>Règles</span></div>
    <div class="info-list">
        <div class="info">vous disposez de 15 secondes pour valider votre réponse. </div>
        <div class="info">autre règles ou infos. </div>

    </div>
    <div class="buttons">
        <button class="exit_btn">Quitter</button>
        <button class="continue_btn">Continuer</button>
    </div>
</div>


<!-- Quiz Box -->
<div class="quiz_box">
    <header>
        <div class="title">Test de Connaissance</div>
        <div class="timer">
            <div class="time_left_txt">Time Left</div>
            <div class="timer_sec">15</div>
        </div>
        <div class="time_line"></div>
    </header>
    <section>
        <div class="que_text">
            <span>Question/titre</span>
            </div>
        <div class="option_list">
        </div>
    </section>
    <footer>
        <div class="total_que"></div>    
        <button class="result_btn">Afficher les résultats !</button>        
        <button class="next_btn">Prochaine question</button>
    </footer>
</div>

<!-- Result Box -->
<div class="result_box">
    <div class="icon">
        <i class="fas fa-crown"></i>
    </div>
    <div class="complete_text">Test terminé  !</div>
    <div class="score_text">
    </div>
    <div class="buttons">
        <button class="continue_btn">Replay Quiz</button>
        <button class="exit_btn" onclick="location.href='/'">Quit Quiz</button>
    </div>
</div>

<script src="/js/quizTemplateModel1/script.js"></script>



